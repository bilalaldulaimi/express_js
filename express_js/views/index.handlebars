<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/members" method="POST" class="mb-4">
<div class="form-group">
    <label class="name">Name</label>
    <input type="text" name="name" class="form-control">
</div>
<div class="form-group">
    <label class="email">Email</label>
    <input type="email" name="email" class="form-control">
</div>
<input type="submit" value="Add Member" class="btn btn-primary btn-block mt-2">
</form>
<h3>Members List</h3>

<ul class="list-group">
    {{#each members}}
    <li class="list-group-item">{{this.name}}: {{this.email}}</li>
    {{/each}}
</ul>

<a href="/api/members" class="btn btn-primary btn-primary mt-2">Visit API</a>